<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>販売機</title>
</head>

<body>
    <ol>
        <li>🍊ジュース = 円250</li>
        <li>🍎ジュース = 円150</li>
        <li>🍈ジュース = 円75</li>
        <li>🍌ジュース = 円90</li>
        <li>🍇ジュース = 円100</li>
    </ol>
    ご注文：<input type="text" id="product">
    <input type="button" name="btn" id="btn" value="選択">
    <p id="warn"></p>
    <p id="demo"></p>
    <hr>
    <p id="tot"></p>
    <input type="button" name="bttn" id="bttn" value="会計" hidden>
    <p id="pay"></p>

    <script>
        var total = 0;
        var butn = document.getElementById("btn");
        butn.addEventListener("click", () => {
            var select = document.getElementById("bttn").removeAttribute("hidden");
            console.log(document.getElementById("bttn").getAttribute("hidden"))
            var selected = document.getElementById("product").value;
            var view = document.getElementById("demo")
            var br = document.createElement("br")

            if (selected == 1) {
                total += 250;
                view.append("🍊ジュース = 円250")
                view.appendChild(br)
            } else if (selected == 2) {
                total += 150;
                view.append("🍎ジュース = 円150")
                view.appendChild(br)
            } else if (selected == 3) {
                total += 75;
                view.append("🍈ジュース = 円75")
                view.appendChild(br)
            } else if (selected == 4) {
                total += 90;
                view.append("🍌ジュース = 円90")
                view.appendChild(br)
            } else if (selected == 5) {
                total += 100;
                view.append("🍇ジュース = 円100")
                view.appendChild(br)
            } else {
                document.getElementById("warn").innerText = "注意：この商品がありません。"
            }
            document.getElementById("tot").innerHTML = '合計　：　<input id="tot" type="text" value="' + total + '" disabled>'
            console.log(total)
        })
        document.getElementById("bttn").addEventListener("click", () => {
            document.getElementById("pay").innerHTML = '<form id="frm"><input id="amount" type="text" value="" placeholder="お金を入力してください。"></form>'
            document.getElementById("frm").addEventListener("submit", (e) => {
                e.preventDefault();
                var amount = document.getElementById('amount').value
                if (amount < total) {
                    alert("不金額")
                } else {
                    var oturi = amount - total
                    if (oturi > 0) {
                        if (confirm("ご来店ありがとうございました。お釣り" + oturi + "円を忘れずに受取下さい。")) {
                            location.reload();
                        }
                    }
                }
            })

        })

    </script>
</body>


</html>